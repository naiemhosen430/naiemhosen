<%- include("portals/header.ejs") %>
<%- include("portals/manu.ejs") %>




<div class="m-5">
    <div>
        <div>
            <form action="/contract" method="post">
                <h1 class="text-center text-light p-4">Let me your reaction about me</h1>
                <div class="m-auto col-8 p-4 shadow rounded">
                    <div class="my-2">
                        <label class="text-info fs-4 d-block" for="name">Write your full nmae</label>
                        <input class="d-block w-100 bg-dark border p-2 px-3 my-1 text-info" type="text" name="name" id="name" placeholder="Enter your full name....">
                    </div>
                    <div class="d-flex">
                        <div class="my-2 w-50">
                            <label class="text-info fs-4 d-block" for="email">Write your e-mail adress</label>
                            <input class="d-block w-100 bg-dark border p-2 px-3 my-1 text-info" type="text" name="email" id="email" placeholder="Enter your email adress....">
                        </div>
                        <div class="my-2 ms-4 w-50">
                            <label class="text-info fs-4 d-block" for="country">Write your country</label>
                            <input class="d-block w-100 bg-dark border p-2 px-3 my-1 text-info" type="text" name="country" id="country" placeholder="Enter your country name....">
                        </div>
                    </div>
                    <div class="my-2">
                        <label class="text-info fs-4 d-block" for="message">Write your message</label>
                        <textarea class="w-100 py-1 px-3 bg-dark border" name="message" id="message" rows="5" placeholder="Write your message here"></textarea>
                    </div>
                    <a class="col-3 d-inline-block text-center shadow rounded py-2 px-4 bg-danger text-light text-decoration-none" href="#">Send message</a>
                </div>
            </form>
        </div>
    </div>
</div>





